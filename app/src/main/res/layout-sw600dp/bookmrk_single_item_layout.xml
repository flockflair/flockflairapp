<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linearLayoutBookmark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/questionBookmark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/CheckBox"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/deleteBookmarkBtn"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:text="Question?"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/chapterName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionBookmark"
            android:layout_alignLeft="@id/CheckBox"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/deleteBookmarkBtn"
            android:paddingStart="8dp"
            android:text="ChapterName"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/deleteBookmarkBtn"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/dustbin" />

        <CheckBox
            android:id="@+id/CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-8dp"
            android:layout_marginRight="100dp"
            android:buttonTint="#5B60DA"
            android:checked="false" />
    </RelativeLayout>

</LinearLayout>