<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorBackgroundFloating">#5B60DA</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="bottomnav" parent="Theme.Design.Light.NoActionBar">
      <item name="itemIconPadding">20dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/color2</item>
        <item name="colorAccent">@color/color3</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textAppearanceMedium">?textAppearanceBody2</item>
    </style>

</resources>